<UserControl x:Class="SimEd.Views.Documents.FileView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:SimEd.ViewModels.Documents"
             xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
             xmlns:documents="clr-namespace:SimEd.Views.Documents"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             mc:Ignorable="d"
             d:DesignWidth="300" d:DesignHeight="400"
             x:CompileBindings="True" x:DataType="vm:FileViewModel">
  <Grid RowDefinitions="*,Auto">
    <avaloniaEdit:TextEditor BorderThickness="0"
             FontFamily="Consolas, Inconsolata"
             FontWeight="Light"
             FontSize="14"
             ShowLineNumbers="True"
             Grid.Row="0">
        
        <i:Interaction.Behaviors>
            <documents:DocumentTextBindingBehavior Text="{Binding Text, Mode=TwoWay}"/>
        </i:Interaction.Behaviors>
    </avaloniaEdit:TextEditor>
      <Grid ColumnDefinitions="*,Auto" Grid.Row="1">
      <TextBlock Text="{Binding Path}"
                 Margin="2"
                 VerticalAlignment="Center"
                 TextWrapping="Wrap"
                 Grid.Column="0" />
      <TextBlock Text="{Binding Encoding}"
                 Margin="2"
                 VerticalAlignment="Center"
                 TextWrapping="Wrap"
                 Grid.Column="1" />
    </Grid>
  </Grid>
</UserControl>
